<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:cardBackgroundColor="#efefef"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/ic_map_person"
                        android:tint="@android:color/black"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/txtFromWhere"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="Md. Mobinur Rahman"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:cardBackgroundColor="#efefef"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/ic_email"
                        android:backgroundTint="@color/black"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/txtRLEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:text="streloy@gmail.com"
                    android:textSize="10sp"
                    android:gravity="center_vertical" />

                <android.support.v7.widget.CardView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:cardBackgroundColor="#efefef"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/ic_call"
                        android:backgroundTint="@color/black"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/txtRLPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:text="+8801711415554"
                    android:textSize="10sp"
                    android:gravity="center_vertical" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:cardBackgroundColor="#efefef"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/ic_date"
                        android:backgroundTint="@color/black"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtPostDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:text="Sun, 22nd April, 2018 12:04:11 AM"
                    android:textSize="10sp"
                    android:gravity="center_vertical"/>


            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardRequestListStatus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Accepted"
                android:textStyle="bold"
                android:textSize="10sp"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>




</android.support.v7.widget.CardView>